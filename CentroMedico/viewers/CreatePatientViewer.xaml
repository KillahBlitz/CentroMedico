<Window x:Class="CentroMedico.viewers.CreatePatientViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Patient Viewer" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="10,10,-37,-24">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="30,20,43,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Registrar Nuevo Paciente" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,-29,0"/>
                <Button HorizontalAlignment="Right" Click="closeModal" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock Text="✕" FontSize="18" Foreground="#9CA3AF" RenderTransformOrigin="1.01,0.611"/>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,-15,0" Padding="0,0,15,0">
                <StackPanel>

                    <TextBlock Text="Nombre Completo" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="fullNameInput" Style="{StaticResource InputStyle}" Tag="Ej. Juan Pérez García"/>
                    <Separator Opacity="0" Height="15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Edad" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="ageInput" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Tipo de Paciente" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="patientTypeInput" Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Grid>
                    <Separator Opacity="0" Height="15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha de Nacimiento" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="dobInput" Height="40" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Gpo y Rh" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="bloodTypeInput" Height="40" 
                                      BorderBrush="#D1D5DB" BorderThickness="1" Background="White"
                                      Padding="10,0" VerticalContentAlignment="Center">
                                <ComboBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </ComboBox.Resources>
                                <ComboBoxItem Content="Por definir" IsSelected="True" Foreground="#2563EB" FontWeight="SemiBold"/>
                                <ComboBoxItem Content="A+"/>
                                <ComboBoxItem Content="A-"/>
                                <ComboBoxItem Content="B+"/>
                                <ComboBoxItem Content="B-"/>
                                <ComboBoxItem Content="AB+"/>
                                <ComboBoxItem Content="AB-"/>
                                <ComboBoxItem Content="O+"/>
                                <ComboBoxItem Content="O-"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Separator Opacity="0" Height="15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="1.3*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Peso (kg)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="weightInput" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Altura (cm)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="heightInput" Style="{StaticResource InputStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Apgar (1' / 5')" Style="{StaticResource LabelStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="apgar1Input" Grid.Column="0" Height="40" 
                                          VerticalContentAlignment="Center" Padding="5,0,0,0" SelectedIndex="0"
                                          BorderBrush="#D1D5DB" BorderThickness="1" Background="White">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem Content="-"/>
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="3"/>
                                    <ComboBoxItem Content="4"/>
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="6"/>
                                    <ComboBoxItem Content="7"/>
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="9"/>
                                    <ComboBoxItem Content="10"/>
                                </ComboBox>

                                <TextBlock Text="de" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           Foreground="#9CA3AF" Margin="5,0" FontWeight="SemiBold"/>

                                <ComboBox x:Name="apgar5Input" Grid.Column="2" Height="40" 
                                          VerticalContentAlignment="Center" Padding="5,0,0,0" SelectedIndex="0"
                                          BorderBrush="#D1D5DB" BorderThickness="1" Background="White">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem Content="-"/>
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="3"/>
                                    <ComboBoxItem Content="4"/>
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="6"/>
                                    <ComboBoxItem Content="7"/>
                                    <ComboBoxItem Content="8"/>
                                    <ComboBoxItem Content="9"/>
                                    <ComboBoxItem Content="10"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Separator Opacity="0" Height="15"/>

                    <TextBlock Text="Antecedentes de Importancia" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="historyInput" Height="84" TextWrapping="Wrap" VerticalContentAlignment="Top" Padding="10"
                             BorderBrush="#D1D5DB" BorderThickness="1">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Separator Opacity="0" Height="10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancelar" Click="closeModal" 
                        Background="White" Foreground="#374151" BorderBrush="#D1D5DB" BorderThickness="1"
                        Width="120" Height="40" Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Guardar Paciente" Click="saveData"
                        Background="#2563EB" Foreground="White" BorderThickness="0"
                        Width="150" Height="40" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.FontWeight="SemiBold"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>