<Window x:Class="CentroMedico.viewers.DetailsViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalles del Paciente" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="BtnVerde" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnAzulMarino" TargetType="Button">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnIcono" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2563EB" Height="70" Padding="25,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Path Data="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" 
                      Fill="White" Height="24" Stretch="Uniform" Margin="0,0,12,0"/>
                <TextBlock Text="Consultorio Dra. Reynoso" Foreground="White" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <Button Click="BtnRegresar_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Cursor="Hand" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" Foreground="#2563EB" FontWeight="Bold" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Regresar a la lista de pacientes" Foreground="#2563EB" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Border Background="White" CornerRadius="10" Padding="35">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.08"/>
                    </Border.Effect>

                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="txtNombrePaciente" Text="Cargando Nombre..." FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,15"/>

                                <WrapPanel>
                                    <TextBlock x:Name="txtDatosBasicos" Text="Edad: --   •   F. Nacim: --/--/--   •   Gpo y Rh: --" 
                                               Foreground="#4B5563" FontSize="16" Margin="0,0,25,0"/>

                                    <TextBlock x:Name="txtUltimosDatos" Text="Peso: -- kg   •   Altura: -- cm" 
                                               Foreground="#2563EB" FontWeight="Bold" FontSize="16"/>
                                </WrapPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Style="{StaticResource BtnIcono}" Click="BtnEditar_Click" ToolTip="Editar">
                                    <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" Fill="#6B7280" Height="18" Stretch="Uniform"/>
                                </Button>
                                <Button Style="{StaticResource BtnIcono}" Click="BtnEliminar_Click" ToolTip="Eliminar">
                                    <Path Data="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z" Fill="#EF4444" Height="18" Stretch="Uniform"/>
                                </Button>
                                <Button Content="+ Agregar un Antecedente" Style="{StaticResource BtnAzulMarino}" Margin="0,0,15,0"/>
                                <Button Content="+ Agregar Nota de Evolución" Style="{StaticResource BtnVerde}"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,30" Background="#E5E7EB"/>

                        <Border Background="#1E40AF" CornerRadius="8" Padding="20,15" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                    <TextBlock Text="TIPO DE PACIENTE" FontWeight="Bold" FontSize="12" Foreground="#BFDBFE" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtTipoPaciente" 
                                               Text="--" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               Foreground="White"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="100,0,0,0">
                                    <TextBlock Text="APGAR" FontWeight="Bold" FontSize="12" Foreground="#BFDBFE" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtApgar" Text="--" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="TIPO DE SANGRE" FontWeight="Bold" FontSize="12" Foreground="#BFDBFE" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtTipoSangre" Text="--" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <TextBlock Text="Antecedentes de Importancia" FontWeight="Bold" FontSize="18" Foreground="#374151" Margin="0,0,0,15"/>

                        <ListView x:Name="listHistories" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.Template>
                                <ControlTemplate TargetType="ListView">
                                    <Grid>
                                        <ScrollViewer>
                                            <ItemsPresenter />
                                        </ScrollViewer>

                                        <Border x:Name="NoDataBorder" Visibility="Collapsed" 
                                                Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" 
                                                CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                            <TextBlock Text="No hay antecedentes que mostrar." 
                                                       Foreground="#6B7280" FontStyle="Italic" FontSize="15"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="HasItems" Value="False">
                                            <Setter TargetName="NoDataBorder" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ListView.Template>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#EFF6FF" BorderBrush="#BFDBFE" BorderThickness="1" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Tipo: " FontWeight="Bold" FontSize="15" Foreground="#1E40AF"/>
                                                <TextBlock Text="{Binding type_history}" FontWeight="SemiBold" FontSize="15" Foreground="#1E3A8A"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding history}" 
                                                       FontSize="15" 
                                                       Foreground="#374151" 
                                                       TextWrapping="Wrap" 
                                                       LineHeight="22"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Separator Margin="0,30" Background="#E5E7EB"/>

                        <TextBlock Text="Historial de Consultas" FontWeight="Bold" FontSize="18" Foreground="#374151" Margin="0,0,0,20"/>

                        <ListView x:Name="listHistorial" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                                        <StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                <TextBlock Text="Fecha de Consulta: " FontWeight="Bold" FontSize="16" Foreground="#111827"/>
                                                <TextBlock Text="{Binding date, StringFormat='{}{0:dd/MM/yyyy}'}" FontWeight="Bold" FontSize="16" Foreground="#111827"/>
                                                <TextBlock Text=" - " FontSize="16" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding type_consultation, TargetNullValue='No registrado', FallbackValue='No registrado'}" FontSize="16" Foreground="#6B7280"/>
                                            </StackPanel>

                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="Peso: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding weight}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" kg" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="Talla: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding height}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" cm" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <TextBlock Text="P.C.: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding pc}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" cm" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                    <TextBlock Text="T°: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding temperature}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" °C" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                                    <TextBlock Text="FC: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding heart_rate}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" lpm" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="5" Orientation="Horizontal">
                                                    <TextBlock Text="FR: " FontWeight="SemiBold" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text="{Binding respiratory_rate}" FontSize="15" Foreground="#374151"/>
                                                    <TextBlock Text=" rpm" FontSize="15" Foreground="#374151"/>
                                                </StackPanel>
                                            </Grid>

                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>