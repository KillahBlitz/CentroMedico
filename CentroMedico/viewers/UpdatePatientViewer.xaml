<Window x:Class="CentroMedico.viewers.UpdatePatientViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Paciente" Height="550" Width="700"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Editar Información del Paciente" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                <Button HorizontalAlignment="Right" Click="CloseModal" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock Text="✕" FontSize="18" Foreground="#9CA3AF"/>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Nombre Completo" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="fullNameInput" Style="{StaticResource InputStyle}" TextChanged="FullNameInput_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Tipo de Paciente" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="patientTypeInput" Style="{StaticResource InputStyle}"/>
                    </StackPanel>
                </Grid>

                <Separator Opacity="0" Height="20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Fecha de Nacimiento" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="dateOfBirthInput" Height="40" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Gpo y Rh" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="bloodTypeInput" Height="40" 
                                  BorderBrush="#D1D5DB" BorderThickness="1" Background="White"
                                  Padding="10,0" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="A+"/>
                            <ComboBoxItem Content="A-"/>
                            <ComboBoxItem Content="B+"/>
                            <ComboBoxItem Content="B-"/>
                            <ComboBoxItem Content="AB+"/>
                            <ComboBoxItem Content="AB-"/>
                            <ComboBoxItem Content="O+"/>
                            <ComboBoxItem Content="O-"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Separator Opacity="0" Height="20"/>

                <TextBlock Text="Apgar (1' / 5')" Style="{StaticResource LabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="apgarOneInput" 
                             Grid.Column="0"
                             Style="{StaticResource InputStyle}"
                             Tag="1'"/>

                    <TextBlock Text="/" 
                               Grid.Column="1" 
                               FontSize="20" 
                               Foreground="#9CA3AF" 
                               VerticalAlignment="Center" 
                               Margin="15,0"/>

                    <TextBox x:Name="apgarFiveInput" 
                             Grid.Column="2"
                             Style="{StaticResource InputStyle}"
                             Tag="5'"/>
                </Grid>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Cancelar" Click="CloseModal" 
                        Background="White" Foreground="#374151" BorderBrush="#D1D5DB" BorderThickness="1"
                        Width="120" Height="40" Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Guardar Cambios" Click="SaveData"
                        Background="#2563EB" Foreground="White" BorderThickness="0"
                        Width="150" Height="40" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
